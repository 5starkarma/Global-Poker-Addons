{
  "manifest_version": 2,

  "name": "Global Add-on",
  "description": "A chrome extension to add quick-seat, hotkeys, and other tools to Global Poker.",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
      "matches": ["https://public.globalpoker.com/poker-client/poker/10/external-table"],
      "run_at": "document_end",
      "js": ["content.js"]
    }]
}